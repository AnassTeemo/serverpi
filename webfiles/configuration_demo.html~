<title>Document sans nom</title>
<script>

function sendRequest()
{
	var xmlhttp=new XMLHttpRequest();
	var liste, valeur,url;
	liste = document.getElementById("ListeElement");
	valeur = liste.options[liste.selectedIndex].value;
	url = "valeur="+valeur;
	xmlhttp.open("GET",url,true);
	xmlhttp.send();
}
</script>
</head>

<body>
<div align="center">
<p> Choix des demonstarion : </p>
<br><br>
<select id="ListeElement" name="selectDemo"> 
   <option value="Demo_carrefour">Demo carrefour</option> 
   <option value="Demo_chenillard">Demo chenillard</option> 
   <option value="Demo_led">Demo led</option> 
</select>
<button type="button" onclick="sendRequest()"> Envoyer </button>
</div>
